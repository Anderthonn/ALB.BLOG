@model List<ALB.BLOG.BLO.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <a class="btn mb-1" style="background-color: #00B8E4; color: white;" asp-action="Register" asp-controller="User"><i class="bi bi-plus-circle-fill"></i> Add User</a>
    <div class="card">
        <div class="card-header" style="background-color: #00B8E4;">
            <h4 class="card-title text-white">List of Users</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <a class="btn btn-info" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id">Reset Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>